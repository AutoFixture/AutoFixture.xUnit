<?xml version="1.0" encoding="utf-8"?>
<package>
    <metadata>
        <id>AutoFixture</id>
        <version>@build.number@</version>
        <title>AutoFixture</title>
        <authors>Mark Seemann</authors>
        <owners>Mark Seemann</owners>
        <description>AutoFixture makes it easier for developers to do Test-Driven Development by automating non-relevant Test Fixture Setup, allowing the Test Developer to focus on the essentials of each test case.</description>
        <projectUrl>https://github.com/AutoFixture/AutoFixture</projectUrl>
        <licenseUrl>https://github.com/AutoFixture/AutoFixture/blob/master/LICENCE.txt</licenseUrl>
        <iconUrl>https://raw.githubusercontent.com/AutoFixture/AutoFixture/master/AutoFixtureLogo200x200.png</iconUrl>
        <language>en-US</language>

        <dependencies>
          <group targetFramework=".NETFramework4.5" />
          <group targetFramework=".NETStandard1.5">
            <dependency id="NETStandard.Library" version="1.6.1" exclude="Build,Analyzers" />
            <dependency id="System.ComponentModel.Annotations" version="4.3.0" exclude="Build,Analyzers" />
            <dependency id="System.Threading.Thread" version="4.3.0" exclude="Build,Analyzers" />
          </group>
        </dependencies>
    </metadata>
    <files>
        <file src="netfull\Ploeh.AutoFixture.dll" target="lib\net45" />
        <file src="netfull\Ploeh.AutoFixture.pdb" target="lib\net45" />
        <file src="netfull\Ploeh.AutoFixture.XML" target="lib\net45" />
        <file src="netstandard\Ploeh.AutoFixture.dll" target="lib\netstandard1.5" />
        <file src="netstandard\Ploeh.AutoFixture.pdb" target="lib\netstandard1.5" />
        <file src="netstandard\Ploeh.AutoFixture.XML" target="lib\netstandard1.5" />
        <file src="..\Src\AutoFixture\**\*.cs" target="src" />
    </files>
</package>
